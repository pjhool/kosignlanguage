# Docker 환경 변수 설정
# .env 파일을 복사하여 사용하세요

# 디스플레이 설정 (Linux/Mac)
DISPLAY=:0

# 카메라 디바이스
CAMERA_DEVICE=/dev/video0

# 사용자 ID (Linux 권한 문제 해결)
USER_ID=1000
GROUP_ID=1000

# GPU 지원 (NVIDIA Docker)
NVIDIA_VISIBLE_DEVICES=all
NVIDIA_DRIVER_CAPABILITIES=compute,utility

# 애플리케이션 설정
CONFIG_FILE=config.yaml
DATA_PATH=./data
MODELS_PATH=./models

# 로그 레벨
LOG_LEVEL=INFO

# TTS 엔진
TTS_ENGINE=pyttsx3

# 포트 (API 서버용 - 향후 확장)
API_PORT=8000
